{
  "compilerOptions": {
    "outDir": "dist/tsc",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "common/**/*.ts",
    "common/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "types": ["chrome"]
}
